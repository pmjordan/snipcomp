    "version": "0.2.0",
    "configurations": [
    
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'snipcomp'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=snipcomp",
                    "--package=snipcomp"
                ],
                "filter": {
                    "name": "snipcomp",
                    "kind": "bin"
                }
            },
            "args": ["--spec-path","testspec.md","--example-path","examples/"],
            "cwd": "${workspaceFolder}"
        },
    ]
}